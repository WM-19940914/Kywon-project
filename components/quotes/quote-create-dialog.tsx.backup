'use client'

import { useState, useEffect } from 'react'
import { Order, CustomerQuote, QuoteItem } from '@/types/order'
import {
  Dialog,
  DialogContent,
  DialogFooter,
  DialogHeader,
  DialogTitle,
} from '@/components/ui/dialog'
